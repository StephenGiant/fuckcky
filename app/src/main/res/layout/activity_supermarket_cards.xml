<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <com.nsk.cky.ckylibrary.widget.PopupFilterMenu
        android:id="@+id/popup_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dividerColor="@color/gray"
        app:maskColor="@color/mask_color"
        app:menuBackgroundColor="@color/white"
        app:menuMenuHeightPercent="0.5"
        app:menuSelectedIcon="@drawable/up_select"
        app:menuTextSize="13sp"
        app:menuUnselectedIcon="@drawable/down_select"
        app:textSelectedColor="@color/colorAccent"
        app:textUnselectedColor="@color/drop_down_unselected"
        app:underlineColor="@color/gray"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_head"
                android:text="全部"
                android:gravity="center_vertical"
                android:textColor="@color/title_black"
                android:textSize="@dimen/space_12"
                android:padding="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_14"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
