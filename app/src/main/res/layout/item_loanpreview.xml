<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="loanpremodel"
            type="com.nsk.app.bussiness.index.viewmodel.IndexInfoBean.LoanInfo.LoanBean"/>
    </data>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/space_20"
    android:paddingBottom="@dimen/space_20"
    android:paddingLeft="@dimen/space_20"
    android:paddingRight="@dimen/space_20"
    android:background="@color/white"
    >
<ImageView
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:scaleType="fitCenter"
    android:id="@+id/iv_loanLogo"
    app:url = "@{loanpremodel.n_loan_logo_url}"
    android:layout_width="@dimen/space_24"
    android:layout_height="@dimen/space_24" />
    <TextView
        android:layout_marginLeft="@dimen/space_7"
        app:layout_constraintTop_toTopOf="@id/iv_loanLogo"
        app:layout_constraintStart_toEndOf="@id/iv_loanLogo"
        android:id="@+id/tv_loantitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{loanpremodel.n_loan_title}"
        android:textColor="@color/title_black"
        />
    <TextView
        android:layout_marginTop="@dimen/space_8"
        android:id="@+id/tv_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_loanLogo"
        android:textColor="@color/orange_main"
        android:text="@{loanpremodel.n_loan_limit}"
        android:textSize="18sp"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="额度(元)"
        android:textColor="@color/gray"
        android:textSize="12sp"
        />
    <TextView
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_20"
        android:text="@{loanpremodel.n_loan_subheading}"
        android:textSize="14sp"
        android:textColor="@color/title_black"
        app:layout_constraintTop_toBottomOf="@id/iv_loanLogo"
        app:layout_constraintStart_toEndOf="@id/tv_credit"
        android:id="@+id/tv_charact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:paddingLeft="@dimen/space_8"
        android:paddingRight="@dimen/space_8"
        android:paddingTop="@dimen/space_6"
        android:paddingBottom="@dimen/space_6"
        android:background="@drawable/attbutton_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_now"
        android:textColor="@color/white"
        android:textSize="11sp"
        />
</android.support.constraint.ConstraintLayout>
</layout>