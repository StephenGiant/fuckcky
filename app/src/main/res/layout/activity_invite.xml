<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_invite">

    <ImageView
        android:id="@+id/iv_invitetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_44"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_invitesubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_14"
        android:src="@drawable/invitesubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_invitetitle" />

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_15"
        android:src="@drawable/rewarddetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_invitesubtitle" />



    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       app:layout_constraintGuide_percent="0.31" />
    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.69" />
    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />
    <TextView
        android:id="@+id/tv_title_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_35"
        android:text="注册奖"
        android:textColor="@color/title_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/iv_detail" />
    <TextView
        android:layout_marginTop="@dimen/space_5"
        app:layout_constraintTop_toBottomOf="@id/tv_title_regist"
        app:layout_constraintStart_toStartOf="@id/tv_title_regist"
        app:layout_constraintEnd_toEndOf="@id/tv_title_regist"
        android:textSize="22sp"
        android:text="5"
        android:textColor="@color/Color_Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_registjiangli"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_registjiangli"
        app:layout_constraintStart_toStartOf="@id/tv_title_regist"
        app:layout_constraintEnd_toEndOf="@id/tv_title_regist"
        android:text="@string/unit_cashyuan"
        android:textColor="@color/Color_Red"
        android:id="@+id/tv_unit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_titlr_loan"
        android:text="贷款奖"
        android:layout_marginTop="35dp"
       app:layout_constraintTop_toTopOf="@id/iv_detail"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        android:textColor="@color/title_black"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/space_5"
        app:layout_constraintTop_toBottomOf="@id/tv_titlr_loan"
        app:layout_constraintStart_toStartOf="@id/tv_titlr_loan"
        app:layout_constraintEnd_toEndOf="@id/tv_titlr_loan"
        android:textSize="22sp"
        android:text="25"
        android:textColor="@color/Color_Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loanjiangli"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_registjiangli"
        app:layout_constraintStart_toStartOf="@id/tv_titlr_loan"
        app:layout_constraintEnd_toEndOf="@id/tv_titlr_loan"
        android:text="@string/unit_cashyuan"
        android:textColor="@color/Color_Red"
        android:id="@+id/tv_unit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title_card"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="@id/guideline3"
        android:text="办卡奖"
        android:textColor="@color/title_black"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@id/iv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/space_5"
        app:layout_constraintTop_toBottomOf="@id/tv_title_card"
        app:layout_constraintStart_toStartOf="@id/tv_title_card"
        app:layout_constraintEnd_toEndOf="@id/tv_title_card"
        android:textSize="22sp"
        android:text="15"
        android:textColor="@color/Color_Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardjiangli"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_registjiangli"
        app:layout_constraintStart_toStartOf="@id/tv_title_card"
        app:layout_constraintEnd_toEndOf="@id/tv_title_card"
        android:text="@string/unit_cashyuan"
        android:textColor="@color/Color_Red"
        android:id="@+id/tv_unit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title_totaljiangli"
        android:layout_marginLeft="@dimen/space_2"
        android:layout_marginTop="@dimen/space_35"
        app:layout_constraintStart_toStartOf="@id/tv_unit1"
        app:layout_constraintTop_toBottomOf="@id/tv_unit1"
        android:text="累计奖励"
        android:textColor="@color/white"
        android:textSize="@dimen/space_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintStart_toStartOf="@id/title_totaljiangli"
        app:layout_constraintEnd_toEndOf="@id/title_totaljiangli"
        app:layout_constraintTop_toBottomOf="@id/title_totaljiangli"
        android:text="55"
        android:textColor="@color/white"
        android:id="@+id/tv_jianglitotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_canusetitle"
        android:layout_marginLeft="@dimen/space_2"
        android:layout_marginTop="@dimen/space_35"
        app:layout_constraintStart_toStartOf="@id/tv_loanjiangli"
        app:layout_constraintTop_toBottomOf="@id/tv_unit1"
        android:text="可领取"
        android:textColor="@color/white"
        android:textSize="@dimen/space_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintStart_toStartOf="@id/tv_canusetitle"
        app:layout_constraintEnd_toEndOf="@id/tv_canusetitle"
        app:layout_constraintTop_toBottomOf="@id/title_totaljiangli"
        android:text="30"
        android:textColor="@color/white"
        android:id="@+id/tv_jianguseful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/space_10"
        app:layout_constraintTop_toBottomOf="@id/iv_detail"
   app:layout_constraintStart_toStartOf="@id/iv_detail"
        app:layout_constraintEnd_toEndOf="@id/iv_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/space_10"
        app:cardElevation="1dp"

        >
        <RelativeLayout
            android:paddingTop="@dimen/space_24"
            android:paddingBottom="@dimen/space_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.widget.Space
                android:id="@+id/centerline"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_height="10dp" />
            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_marginRight="@dimen/space_30"
                android:layout_toLeftOf="@id/centerline"
                android:src="@drawable/icon_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/iv_wechat"
                android:layout_toLeftOf="@id/centerline"
                android:layout_marginTop="@dimen/space_12"
                android:layout_marginRight="@dimen/space_14"
                android:text="分享微信好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="@dimen/space_30"
                android:layout_toRightOf="@id/centerline"
                android:id="@+id/iv_cicleshare"
                android:src="@drawable/icon_wecicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/iv_wechat"
                android:layout_toRightOf="@id/centerline"
                android:layout_marginTop="@dimen/space_12"
                android:layout_marginLeft="@dimen/space_18"
                android:text="分享朋友圈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

<TextView
    android:layout_marginBottom="@dimen/space_30"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="财育康  财富与健康管理专家"
    android:textColor="#705800"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
</layout>