<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="invitemodel"
            type="com.nsk.app.bussiness.index.viewmodel.IndexInfoBean.InviteInfo"/>
    </data>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_invite"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <ImageView
            app:url="@{invitemodel.n_content}"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_13"
            android:src="@drawable/invite"/>
        <TextView
            app:textnourl="@{invitemodel.n_content}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:visibility="visible"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/space_4"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_4"
            android:background="#d1d3d5"/>
        <TextView
            android:id="@+id/tv_table_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_12"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="每邀请1人立得10元，上不封顶"
            android:textColor="@color/main_black"
            android:textSize="@dimen/space_14"
            android:visibility="visible"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</layout>