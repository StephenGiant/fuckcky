<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space_20"
    android:paddingRight="@dimen/space_20"
    >
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/icon_notify"
    android:layout_marginTop="@dimen/space_12"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintWidth_percent="0.107"
    app:layout_constraintDimensionRatio="h,1:1"
    app:civ_fill_color="@color/colorHint"
    app:civ_border_color="@color/colorHint"
    app:civ_border_width="0.5dp"
    />
<TextView
    android:layout_marginTop="@dimen/space_12"
    android:textSize="16sp"
    android:textColor="@color/title_black"
    android:layout_marginLeft="@dimen/space_10"
    app:layout_constraintStart_toEndOf="@id/icon_notify"
    android:id="@+id/tv_notifytitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/space_4"
        app:layout_constraintTop_toBottomOf="@id/tv_notifytitle"
        android:textSize="14sp"
        android:textColor="@color/boder_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notifycontent"
        />
    <TextView
        android:layout_marginTop="@dimen/space_4"
        app:layout_constraintTop_toBottomOf="@id/tv_notifytitle"
        android:textSize="14sp"
        android:textColor="@color/boder_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notifytime"
        />
</android.support.constraint.ConstraintLayout>
</layout>