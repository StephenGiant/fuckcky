<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="healthyindexmodel"
            type="com.nsk.app.bussiness.healthy.viewmodel.HealthIndexViewModel"/>
    </data>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rl_top"
        android:paddingTop="@dimen/space_12"
        android:paddingBottom="@dimen/space_12"
        android:paddingLeft="@dimen/space_28"
        android:paddingRight="@dimen/space_28"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="85dp">

    <TextView
        android:onClick="@{healthyindexmodel::toWorkPhysical}"
        android:layout_marginTop="@dimen/space_10"
        android:id="@+id/tv_work_phy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入职体检"
        android:textColor="@color/title_black"
        android:textSize="16sp"
        />


        <de.hdodenhof.circleimageview.CircleImageView
            android:onClick="@{healthyindexmodel::toWorkPhysical}"
            android:layout_marginLeft="@dimen/space_20"
            android:id="@+id/iv_work"
            android:layout_toRightOf="@id/tv_work_phy"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:src="@drawable/icon_physical"
            />

        <TextView
            android:onClick="@{healthyindexmodel::toWorkPhysical}"
            android:id="@+id/tv_work_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/tv_work_phy"
            android:layout_below="@+id/tv_work_phy"
            android:layout_marginTop="@dimen/space_2"
            android:text="团购优惠"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"
            />
        <View
            android:background="@color/background"
            android:id="@+id/center_divider"
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:onClick="@{healthyindexmodel::toProPhysical}"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:layout_toRightOf="@id/center_divider"
            android:id="@+id/tv_pro_phy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高端体检"
            android:textSize="16sp"
            android:textColor="@color/title_black"
            />
        <TextView
            android:onClick="@{healthyindexmodel::toProPhysical}"
            android:id="@+id/tv_pro_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pro_phy"
            android:layout_alignLeft="@id/tv_pro_phy"
            android:layout_marginTop="@dimen/space_2"
            android:text="私人定制"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:onClick="@{healthyindexmodel::toProPhysical}"
            android:layout_marginLeft="@dimen/space_20"
            android:id="@+id/iv_pro"
            android:layout_toRightOf="@id/tv_pro_phy"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:src="@drawable/icon_pro_phy"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_requestnow"
        android:onClick="@{healthyindexmodel::requestSpecialHeal}"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:text="@string/request_now"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/health_green"
        />

<View
    app:layout_constraintTop_toBottomOf="@id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="6dp"
    android:background="@color/background"
    />
    <ImageView
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:id="@+id/iv_ckyhealthy"
        app:url="@{healthyindexmodel.adsPicUrl}"
        android:layout_marginTop="21dp"
       android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/rl_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <View
        android:id="@+id/view_divider"
        android:layout_marginTop="@dimen/space_15"
        app:layout_constraintTop_toBottomOf="@id/iv_ckyhealthy"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/background"
        />
    <TextView
        android:visibility="gone"
        android:text="医疗特需"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_ckyhealthy"
        app:layout_constraintStart_toStartOf="@id/iv_ckyhealthy"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/rl_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/healthy_adtip"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/rv_departments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:adapter="@{healthyindexmodel.departments_field}"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        app:layout_constraintBottom_toTopOf="@id/btn_requestnow"
        app:layout_constraintEnd_toStartOf="@+id/rv_hospitals"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"

        app:layout_constraintStart_toStartOf="parent">

    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_marginTop="@dimen/space_21"
        app:layout_constraintTop_toBottomOf="@id/iv_ckyhealthy"
        app:layout_constraintStart_toEndOf="@id/rv_departments"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/background"

        />
    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        android:id="@+id/rv_hospitals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:adapter="@{healthyindexmodel.hospitals_field}"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/btn_requestnow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/rv_departments">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
</layout>