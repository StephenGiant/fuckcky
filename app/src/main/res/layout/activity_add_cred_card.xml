<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="addcardmodel"
            type="com.nsk.app.bussiness.mine.viewmodel.AddCardViewmodel"/>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:gravity="center_vertical"
                    android:text="信用卡号码"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/space_14"/>
                <EditText
                    android:id="@+id/et_card_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_14"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="例如:0000"
                    android:maxLength="16"
                    android:inputType="number"
                    android:paddingRight="@dimen/space_20"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:gravity="center_vertical"
                    android:text="银行"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/space_14"/>
                <TextView
                    android:onClick="@{addcardmodel::chooseBank}"
                    android:id="@+id/tv_card_bank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_14"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="选择发卡银行"
                    android:paddingRight="@dimen/space_20"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/space_14"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_14"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="例如:张三"
                    android:maxLength="6"
                    android:paddingRight="@dimen/space_20"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:gravity="center_vertical"
                    android:text="账单日"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/space_14"/>
                <TextView
                    android:id="@+id/tv_card_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_14"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="选择账单日"
                    android:inputType="number"
                    android:paddingRight="@dimen/space_20"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:gravity="center_vertical"
                    android:text="还款日"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/space_14"/>
                <TextView
                    android:id="@+id/tv_card_back_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_14"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="选择还款日"
                    android:inputType="number"
                    android:paddingRight="@dimen/space_20"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:gravity="center_vertical"
                    android:text="信用卡额度"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/space_14"/>
                <EditText
                    android:id="@+id/et_card_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_14"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="如:10000"
                    android:inputType="number"
                    android:maxLength="7"
                    android:paddingRight="@dimen/space_20"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background"/>
            <LinearLayout
                android:onClick="@{addcardmodel::takephoto}"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="@dimen/space_12"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="拍照上传"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/space_14"/>
                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_24"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/space_20"
                    android:src="@drawable/photo"
                />
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_photopreview"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_shenfenzheng"
                    app:url="@{addcardmodel.cardImage}"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginBottom="@dimen/space_16"
                    android:layout_width="140dp"
                    android:layout_height="@dimen/space_100" />
                <TextView
                    android:id="@+id/iv_zhao"
                    android:onClick="@{addcardmodel::takephoto}"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/transparent_black_hex_11"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginBottom="@dimen/space_16"
                    android:layout_width="140dp"
                    android:layout_height="@dimen/space_100" />
            </RelativeLayout>
        </LinearLayout>
        <!--android:onClick="@{addcardmodel::confirmInfo}"-->
        <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/space_18"/>
    </RelativeLayout>

</layout>