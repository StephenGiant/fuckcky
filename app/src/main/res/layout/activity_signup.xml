<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="personDetail"
            type="com.nsk.app.bussiness.mine.viewmodel.LoginModel"/>
    </data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:hint="请输入手机号"
        android:textColorHint="@color/colorHint"
        app:counterMaxLength="11"
        app:counterOverflowTextAppearance="@style/TextOverCount"
    >
        <EditText
            android:id="@+id/text_input_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/main_black"
        />

    </android.support.design.widget.TextInputLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:textColorHint="@color/colorHint"
            app:counterOverflowTextAppearance="@style/TextOverCount"
        >
            <EditText
                android:id="@+id/text_input_code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/write_code"
                android:inputType="number"
                android:textColor="@color/main_black"
            />
        </android.support.design.widget.TextInputLayout>
        <com.nsk.cky.ckylibrary.widget.CountDownTextView
            android:id="@+id/tv_send_code"
            android:layout_width="@dimen/space_100"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/space_20"
            android:gravity="center|right"
            android:text="@string/get_code"
            android:textColor="@color/colorAccent"
        />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:textColorHint="@color/colorHint"
            app:counterOverflowTextAppearance="@style/TextOverCount"
        >
            <com.nsk.cky.ckylibrary.widget.PasswordToggleEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:maxLength="16"
                android:inputType="textPassword"
                android:hint="@string/inputu_pass"
                android:textColor="@color/main_black"
            />
        </android.support.design.widget.TextInputLayout>
    </FrameLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_signin"
        android:layout_width="@dimen/space_335"
        android:layout_height="@dimen/space_44"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_20"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/sign_up"
        android:textColor="@color/white"
    />
    <LinearLayout
        android:id="@+id/ll_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:paddingBottom="@dimen/space_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_agree"
            android:textColor="#FF999999"
            android:textSize="@dimen/space_13"
        />
        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agree_protocol"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/space_13"
        />

    </LinearLayout>
</LinearLayout>
</layout>